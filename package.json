{
    "name": "serve-router",
    "version": "0.8.2",
    "type": "module",
    "sideEffect": false,
    "main": "dist/index.cjs",
    "types": "dist/index.d.ts",
    "files": [
        "src/",
        "dist/"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        },
        "./node": {
            "import": "./dist/node/index.mjs",
            "require": "./dist/node/index.cjs"
        },
        "./utils": {
            "import": "./dist/utils/index.mjs",
            "require": "./dist/utils/index.cjs"
        }
    },
    "scripts": {
        "build": "unbuild",
        "test": "tsx --test test/*",
        "preinstall": "npx only-allow pnpm"
    },
    "devDependencies": {
        "@types/node": "^20.12.7",
        "typescript": "^5.4.5",
        "unbuild": "^2.0.0",
        "urlpattern-polyfill": "^9.0.0"
    },
    "license": "MIT",
    "author": "YieldRay",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/YieldRay/serve-router.git"
    },
    "bugs": {
        "url": "https://github.com/YieldRay/serve-router/issues"
    },
    "homepage": "https://github.com/YieldRay/serve-router#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "description": "tiny router library that routes for your web standard http server",
    "keywords": [
        "http",
        "router",
        "workers",
        "worker",
        "serverless"
    ]
}
